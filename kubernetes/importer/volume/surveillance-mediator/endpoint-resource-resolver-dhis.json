{
  "name": "Covid19 DHIS2 Orchestrator",
  "description": "Endpoint for mapping the Covid19 case report into DHIS format and then forwarding it to DHIS2",
  "endpoint": {
    "pattern": "/resource-resolver-dhis"
  },
  "transformation": {
    "input": "JSON",
    "output": "JSON"
  },
  "inputValidation": {
    "type": "object",
    "properties": {
      "requestBody": {
        "type": "object"
      }
    },
    "required": ["requestBody"]
  },
  "inputMapping": {
    "requestBody.identifier": "teiIdentifier",
    "constants.program": "program",
    "constants.orgUnit": "orgUnit",
    "constants.trackedEntityType": "trackedEntityType",
    "constants.status": "event.status",
    "constants.stage": "event.programStage",

    "transforms.patinfo_ID": "attributes[]+",
    "transforms.patinfo_ageonset": "attributes[]+",
    "transforms.patinfo_sex": "attributes[]+",
    "transforms.caseId": "attributes[]+",

    "transforms.incidentDate": {
      "key": "incidentDate",
      "transform": {
        "function": "dateTimeToDate"
      }
    },

    "transforms.patcourse_asymp": "event.dataValues[]+",
    "transforms.Comcond_any": "event.dataValues[]+",
    "transforms.patcourse_dateonset": "event.dataValues[]+",
    "transforms.expo_travel": "event.dataValues[]+"
  },
  "inputTransforms": {
    "patinfo_ID": "{ 'attribute': constants.attributes.patinfo_ID, 'value': requestBody.identifier }",
    "patinfo_ageonset": "{ 'attribute': constants.attributes.patinfo_ageonset, 'value': requestBody.observations[0].value.valueQuantity.value }",
    "patinfo_sex": "{ 'attribute': constants.attributes.patinfo_sex, 'value': constants.sexMap[requestBody.observations[1].value.valueCodeableConcept.coding[].code] }",
    "caseId": "{ 'attribute': constants.attributes.caseId, 'value': $substringAfter($string($random()), '0.')}",

    "incidentDate": "$now()",
    "patcourse_asymp": "{ 'dataElement': constants.dataElements.patcourse_asymp, 'value': constants.yesNoUnknownMap[requestBody.observations[3].value.valueCodeableConcept.coding[].code] }",
    "Comcond_any": "{ 'dataElement': constants.dataElements.Comcond_any, 'value': constants.yesNoUnknownMap[requestBody.observations[5].value.valueCodeableConcept.coding[].code] }",
    "patcourse_dateonset": "{ 'dataElement': constants.dataElements.patcourse_dateonset, 'value': requestBody.observations[4].value.valueDateTime }",
    "expo_travel": "{ 'dataElement': constants.dataElements.expo_travel, 'value': constants.yesNoUnknownMap[requestBody.observations[6].value.valueCodeableConcept.coding[].code] }"
  },
  "requests": {
    "response": [
      {
        "primary": true,
        "id": "dhis-file-queue",
        "config": {
          "method": "POST",
          "url": "http://file-queue:4002/covid19-case-report",
          "headers": {
            "Content-Type": "application/json"
          }
        }
      }
    ]
  },
  "constants": {
    "program": "uYjxkTbwRNf",
    "orgUnit": "ImspTQPwCqd",
    "stage": "LpWNjNGvCO5",
    "trackedEntityType": "MCPQUTHX1Ze",
    "status": "ACTIVE",
    "attributes": {
      "patinfo_ID": "he05i8FUwu3",
      "patinfo_ageonset": "Rv8WM2mTuS5",
      "patinfo_sex": "oindugucx72",
      "caseId": "HAZ7VQ730yn"
    },
    "dataElements": {
      "patcourse_asymp": "JGnHr6WI3AY",
      "Comcond_any": "sJeIFfhX8BE",
      "patcourse_dateonset": "s3eoonJ8OJb",
      "expo_travel": "TzqawmlPkI5"
    },
    "sexMap": {
      "male": "Male",
      "female": "Female"
    },
    "yesNoUnknownMap": {
      "Y": "Yes",
      "N": "No",
      "U": "Unknown"
    }
  }
}
