{
  "name": "FHIR - Covid-19 Case Outcome QuestionnaireResponse Orchestrator",
  "description": "Endpoint to validate the incoming Covid-19 Case Outcome QuestionnaireResponse payload and then transform to a usable format",
  "endpoint": {
    "pattern": "/case-outcome"
  },
  "transformation": {
    "input": "JSON",
    "output": "JSON"
  },
  "inputValidation": {
    "type": "object",
    "properties": {
      "requestBody": {
        "type": "object",
        "properties": {
          "author": {
            "type": "object",
            "properties": {
              "reference": {
                "type": "string",
                "pattern": "^Practitioner\/.*$"
              }
            }
          },
          "item": {
            "type": "array",
            "items":  {
              "type": "object",
              "properties": {
                "linkId": {
                  "type": "string"
                },
                "answer": {
                  "type": "array"
                },
                "item": {
                  "type": "array"
                }
              },
              "required": ["linkId"]
            }
          }
        },
        "required": ["author", "item"]
      },
      "lookupRequests": {
        "type": "object",
        "properties": {
          "flatArray": {
            "type": "object",
            "properties": {
              "identifier": {
                "type": "string"
              },
              "observations": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "value": {
                      "type": "object"
                    },
                    "coding": {
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "string"
                        },
                        "system": {
                          "type": "string"
                        },
                        "id": {
                          "type": "string"
                        }
                      },
                      "required": ["code", "system"]
                    }
                  },
                  "required": ["value", "id"]
                }
              },
              "encounters": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    }
                  },
                  "required": ["id", "status"]
                }
              }
            },
            "required": ["identifier", "observations", "encounters"]
          }
        },
        "required": ["flatArray"]
      }
    },
    "required": ["requestBody", "lookupRequests"]
  },
  "inputMapping": {
    "lookupRequests.flatArray": "data",
    "requestBody.author": "author"
  },
  "requests": {
    "lookup": [
      {
        "id": "flatArray",
        "forwardExistingRequestBody": true,
        "config": {
          "method": "POST",
          "url": "http://localhost:3003/flatten-case-outcome",
          "headers": {
            "Content-Type": "application/json"
          }
        }
      }
    ],
    "response": [
      {
        "id": "resource-resolver-fhir",
        "config": {
          "method": "POST",
          "url": "http://localhost:3003/create-bundle-case-outcome",
          "headers": {
            "Content-Type": "application/json"
          }
        }
      }
    ]
  }
}
