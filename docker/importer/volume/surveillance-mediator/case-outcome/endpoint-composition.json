{
  "name": "FHIR - Orchestrate Case Outcome Composition Data into one resource",
  "description": "",
  "endpoint": {
    "pattern": "/create-composition-case-outcome"
  },
  "transformation": {
    "input": "JSON",
    "output": "JSON"
  },
  "inputTransforms": {
    "compositionId": "'urn:uuid:' & $substringAfter($string($random()), '0.')"
  },
  "inputMapping": {
    "constants.template": "composition",
    "transforms.compositionId": "composition.fullUrl",
    "requestBody.author": "composition.resource.author[]+",
    "requestBody.data.identifier": "composition.resource.identifier.value",
    "requestBody.data.compositionDate": "composition.resource.date",
    "requestBody.data.encounters[0].id": "composition.resource.encounter.reference",
    "requestBody.data.encounters[1].id": "composition.resource.section[0].entry[0].reference",
    "requestBody.data.observations[0].id": "composition.resource.section[0].entry[1].reference",
    "requestBody.data.observations[1].id": "composition.resource.section[0].entry[2].reference",
    "requestBody.data.observations[2].id": "composition.resource.section[0].entry[3].reference",
    "requestBody.data.observations[3].id": "composition.resource.section[0].entry[4].reference",
    "requestBody.data.observations[4].id": "composition.resource.section[0].entry[5].reference",
    "requestBody.data.observations[5].id": "composition.resource.section[0].entry[6].reference",
    "requestBody.data.observations[6].id": "composition.resource.section[0].entry[7].reference",
    "requestBody.data.observations[7].id": "composition.resource.section[0].entry[8].reference",
    "requestBody.data.observations[8].id": "composition.resource.section[1].entry[0].reference"
  },
  "constants": {
    "template": {
      "resource": {
        "resourceType": "Composition",
        "type": {
          "coding": [
            {
              "code": "95412-3",
              "system": "http://loinc.org"
            }
          ]
        },
        "status": "final",
        "identifier": {
          "system": "http://test.org/identifier/who-covid-19-case-outcome"
        },
        "encounter": {},
        "author": [],
        "title": "WHO COVID-19 Case Outcome",
        "section": [
          {
            "title": "clinical status",
            "code": {
              "coding": [
                {
                  "code": "clinicalStatus",
                  "system": "http://test.org/sectionCode"
                }
              ]
            },
            "entry": []
          },
          {
            "title": "exposure risk",
            "code": {
              "coding": [
                {
                  "code": "exposureRisk",
                  "system": "http://test.org/sectionCode"
                }
              ]
            },
            "entry": []
          }
        ]
      },
      "request": {
        "method": "POST",
        "url": "Composition"
      }
    }
  }
}
